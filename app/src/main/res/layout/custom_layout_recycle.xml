<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:gravity="bottom"
    android:background="@color/snow"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/relativeLayout_3"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/background_recycle"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin2">

        <ImageView
            android:id="@+id/instagram_master"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/instagram"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/margin2"
            android:layout_marginLeft="@dimen/margin3"/>

        <ImageView
            android:id="@+id/whatsapp_master"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/whatsapp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/instagram_master"
            android:layout_marginBottom="@dimen/margin2"
            android:layout_marginLeft="@dimen/margin1"/>

        <ImageView
            android:id="@+id/message_master"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/message"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/whatsapp_master"
            android:layout_marginBottom="@dimen/margin2"
            android:layout_marginLeft="@dimen/margin1"/>

        <TextView
            android:id="@+id/work_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="نصاب ماهواره "
            android:textColor="@color/balck3"
            android:fontFamily="@font/shabnam"
            android:textStyle="bold"
            android:textSize="@dimen/textsize3"
           android:layout_alignParentRight="true"
            android:layout_marginRight="110dp"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:id="@+id/parantez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:layout_marginTop="28dp"/>

        <TextView
            android:id="@+id/location_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خوزستان , بندر ماهشهر"
            android:fontFamily="@font/shabnam"
            android:textSize="@dimen/textsize1"
            android:gravity="center"
            android:layout_toLeftOf="@+id/parantez"
            android:layout_marginTop="32dp"
            android:textColor="@color/gray"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_left_24"
            android:layout_toLeftOf="@+id/location_master"
            android:layout_marginTop="28dp"/>

        <TextView
            android:id="@+id/name_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="استاد احمد "
            android:textColor="@color/balck3"
            android:fontFamily="@font/shabnam"
            android:textSize="@dimen/textsize2"
            android:layout_alignParentRight="true"
            android:layout_above="@id/layout_star"
            android:layout_marginRight="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin1"/>

        <TextView
            android:id="@+id/call_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09169178213"
            android:textColor="@color/call_color"
            android:textSize="@dimen/textsize4"
            android:fontFamily="@font/shabnam"
            android:drawableLeft="@drawable/ic_call_2"
            android:drawablePadding="@dimen/padding2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="130dp"
            android:layout_marginTop="@dimen/margin8"
            android:gravity="center"/>

        <View
            android:layout_width="130dp"
            android:layout_height="1dp"
            android:background="@color/call_color"
            android:layout_below="@id/call_master"
            android:layout_alignParentRight="true"
            android:layout_marginRight="135dp"/>


        <LinearLayout
            android:id="@+id/layout_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin4"
            android:layout_marginBottom="@dimen/margin2">

            <ImageView
                android:id="@+id/star7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/star6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                android:visibility="invisible"/>

        </LinearLayout>

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_master"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/doublen3"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/indigo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin1"
        android:layout_marginRight="@dimen/margin4"/>

</RelativeLayout>